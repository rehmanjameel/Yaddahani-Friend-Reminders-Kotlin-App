<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/friendListCardId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="10dp"
        android:backgroundTint="#f2f2f2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_marginEnd="15dp">

            <LinearLayout
                android:id="@+id/receivedFriendsRemindersLisId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/getListFriendReminderNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Friend Name"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/getListFriendReminderTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Reminder Text"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:textColor="#737373"/>

                <LinearLayout
                    android:id="@+id/reminderDetailListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/receivedReminderTextId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Received Text"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/receivedReminderDateId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/receivedReminderTimeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/receivedReminderStatusId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/archiveReminderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingStart="20dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="20dp"
                            android:textSize="16sp"
                            android:src="@drawable/archive_24"
                            android:layout_alignParentEnd="false" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/expandBottomArrowId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/arrow_down_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>