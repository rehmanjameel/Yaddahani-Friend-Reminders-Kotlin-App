<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".friendsmodule.SendFriendRequestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/sendRequestBackArrowId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sendRequestUserImageId"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/persons"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                app:civ_circle_background_color="#e6e6e6"
                app:civ_border_width="1dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/fragments_layout_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/sendRequestUserNameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/sendRequestFirstNameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/sendRequestLastNameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/sendRequestButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Request"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_margin="40dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>