<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/friendListCardId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="10dp"
        android:backgroundTint="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_marginEnd="15dp">

            <LinearLayout
                android:id="@+id/sentFriendsRemindersLisId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/sentListFriendReminderNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Friend Name"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/sentListFriendReminderTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Reminder Text"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:textColor="#737373"/>

                <LinearLayout
                    android:id="@+id/sentReminderListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/sentReminderTextId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/sentReminderDateId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/sentReminderTimeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/sentReminderStatusId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Status"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/deleteSentReminderIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_delete_24"
                            app:tint="@color/black"
                            android:layout_alignParentEnd="true"/>

                        <ImageView
                            android:id="@+id/updateSentReminderIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/edit_note_24"
                            android:layout_marginEnd="50dp"
                            app:tint="@color/black" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/expandCollapseArrowId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/arrow_down_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>